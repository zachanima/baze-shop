<h1><%= @shop.name %></h1>
<% form_tag(login_path(@shop), :class => 'formtastic') do |f| %>
  <fieldset>
    <ol>
      <li>
        <%= label_tag :login, @shop.username_text.empty? ? 'Brugernavn' : @shop.username_text %>
        <%= text_field_tag :login %>
      </li>
      <li>
        <%= label_tag :password, @shop.password_text.empty? ? 'Adgangskode' : @shop.password_text %>
        <%= password_field_tag :password %>
      </li>
    </ol>
  </fieldset>
  <fieldset>
    <ol><li><%= submit_tag 'Log ind' %></li></ol>
  </fieldset>
<% end %>
