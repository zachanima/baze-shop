<% title 'List all shops' %>
<%= link_to_new('shop', new_shop_path) %>

<% form_tag({ :action => :multiple }, :class => 'index') do %>
  <table>
    <thead>
      <tr>
        <th class="checkbox"><input class="checkbox" id="check_all" onclick="$$('form input.checkbox').each(function(box){box.checked=$('check_all').checked})" type="checkbox"></th>
        <th>Name</th>
        <th>Link</th>
        <th>Users</th>
        <th>Products</th>
        <th>Username</th>
        <th>Password</th>
        <th>Currency</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @shops.each do |shop| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <td class="checkbox"><%= check_box_tag('shop_ids[]', shop.id, false, :class => 'checkbox') %></td>
          <td class="name"><%= link_to(shop.name, edit_shop_path(shop)) %></td>
          <td><%= link_to(shop.link, shop_url(shop)) %></td>
          <td><%= link_to(shop.users.count, shop_users_path(shop)) %></td>
          <td><%= link_to(shop.templates.count, shop_products_path(shop)) %></td>
          <td><%= shop.username_text %></td>
          <td><%= shop.password_text %></td>
          <td><%= shop.currency %></td>
          <td><%= shop.closed ? 'Closed' : nil %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
