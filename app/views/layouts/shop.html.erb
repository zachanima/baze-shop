<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title><%= @shop.name if @shop %></title>
    <%= stylesheet_link_tag 'style', 'formtastic', 'formtastic_changes' %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div id="header">
      <div class="content">
        <span class="logout"><%= [[Time.now.day, Time.now.month].join('/'), [Time.now.hour, Time.now.min].join(':')].join(' - ') %><br /><%= link_to('Logout', logout_path(@shop)) %></span>
        <h1><%= @shop.logo.url == '/logos/original/missing.png' ? @shop.name : image_tag(@shop.logo.url) if @shop %></h1>
      </div>
    </div>

    <div id="nav">
      <div class="content">
        <ul>
          <li><%= link_to('Velkommen', shop_path(@shop)) %></li>
          <% if @current_user and @current_user.shop === @shop %>
            <li>
              <%= link_to('Produkter', '') %>
              <ul>
                <% @shop.categories.roots.each do |root| %>
                  <li>
                    <%= link_to(root.name, shop_category_path(@shop, root)) %>
                    <ul>
                      <% root.children.each do |child| %>
                        <li><%= link_to(child.name, shop_category_path(@shop, child)) %></li>
                      <% end %>
                    </ul>
                  </li>
                <% end %>
              </ul>
            </li>
            <li><%= link_to('Historik', shop_user_orders_path(@shop, @current_user)) %></li>
            <li><%= link_to('Information', shop_user_path(@shop, @current_user)) %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div id="fortune">
      <div class="content">
      </div>
    </div>

    <div class="content" id="content">
      <%= yield %>
    </div>

    <div id="footer">
      <div class="content">
        &copy; 2009-<%= Time.now.year %> Baze A/S
      </div>
    </div>
  </body>
</html>
