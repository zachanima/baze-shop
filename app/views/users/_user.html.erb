<% tr_cycle do %>
  <%= td_check_box(user) %>
  <td class="name">
    <%= truncated_text(user) %>
    <%= link_to_user_name(user) %>
  </td>
  <td><%= shop_or_department(user) %></td>
  <td><%= user.manager %></td>
  <td><%= user.login %></td>
  <td><%= user.password %></td>
  <td><%= link_to_user_orders(user) %></td>
  <td><%= format_currency(user.budget) %></td>
  <td><%= format_currency(user.balance) %></td>
  <%= td_delete(user) %>
<% end %>
