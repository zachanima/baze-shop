<tr>
  <%= td_check_box(user) %>
  <td class="name">
    <%= truncated_text(user) %>
    <%= link_to_user_name(user) %>
  </td>
  <td><%= shop_or_department(user) %></td>
  <td><%= truncated_user_groups(user) %></td>
  <td><%= truncated_manager(user) %></td>
  <td><%= user.login %></td>
  <td><%= user.password %></td>
  <td class="right-align"><%= link_to_user_orders(user) %></td>
  <td class="price"><%= format_currency(user.budget) %></td>
  <td class="price"><%= format_currency(user.balance) %></td>
  <%= td_delete(user) %>
</tr>
