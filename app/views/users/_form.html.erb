<% semantic_form_for @shop ? [@shop, @user] : @user do |f| %>
  <% f.inputs do %>
    <%= f.input :shop unless @shop %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :department %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :comment %>
  <% end %>
  <%= f.buttons %>
<% end %>
