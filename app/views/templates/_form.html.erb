<% semantic_form_for(@product_template, :html => { :multipart => true }) do |f| %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :number %>
    <%= f.input :brand %>
    <%= f.input :text %>
    <% unless @product_template.new_record? %>
      <%= f.input :images, :as => :check_boxes, :collection => @product_template.images.collect { |i| [i.name, i.id] } %>
      <%= link_to_new('image', new_template_image_path(@product_template)) %>
    <% end %>
  <% end %>
  <%= f.buttons %>
<% end %>
