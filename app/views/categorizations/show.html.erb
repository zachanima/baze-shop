<div id="images">
  <%= link_to(image_tag(@categorization.images.first.data.url(:small)), @categorization.images.first.data.url) %>
  <%= link_to('&lt;&lt;') %> 1 / <%= @categorization.images.count %> <%= link_to('&gt;&gt') %>
</div>

<div id="product">
  <h1><%= @categorization.product.name %></h1>
  <%= @categorization.product.text %>
  <% semantic_form_for(:order, :url => new_order_path, :html => { :class => 'formtastic', :method => :get }) do |f| %>
    <% if @categorization.option_groups.count > 0 %>
      <% f.inputs do %>
        <ol>
        <% @categorization.option_groups.each do |option_group| %>
          <li>
            <%= f.label option_group.text %>
            <select name="option_ids">
              <% @categorization.options.each do |option| %>
                <% if option.option_group === option_group %>
                  <% if option.separator %>
                    <option disabled="disabled" />
                    <option disabled="disabled"><%= option.text %></option>
                  <% else %>
                    <option value="<%= option.id %>"><%= option.text %></option>
                  <% end %>
                <% end %>
              <% end %>
            </select>
            <%#= f.select :option_ids, @categorization.options.find(:all, :conditions => ['option_group_id = ?', option_group]).collect { |o| [o.text, o.id] }, { :include_blank => true, :selected => :blank }, { :name => 'order[option_ids][]' } %>
          </li>
        <% end %>
        </ol>
      <% end %>
    <% end %>
    <% f.buttons do %>
      <%= f.commit_button('FÃ¸j til kurv...') %>
    <% end %>
  <% end %>
</div>
